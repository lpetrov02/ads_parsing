{
    "format": "LightTokens",
    "max_bundles": 5,
    "max_eval_size": 100,
    "singles_to_mults_ratio": 2,
    "clean_text": true,
    "model": "ai-forever/ruT5-large",
    "add_nl_token": false,
    "add_eos_token": false,
    "change_pad_to_eos": false,
    "shuffle_bundles": true,
    "save_folder": "ruT5-large-LT-ratio2",
    "train": {
        "n_epochs": 10,
        "lr": 5e-05,
        "batch_size": 8,
        "weight_decay": 0.01,
        "scheduler": "cosine",
        "warmup_steps": 1000,
        "fp16": true
    },
    "eval": {
        "batch_size": 8,
        "show": 5
    }
}