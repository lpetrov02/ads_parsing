{
    "format": "JustJson",
    "max_bundles": 5,
    "max_eval_size": 50,
    "model": "ai-forever/ruT5-large",
    "add_nl_token": false,
    "add_eos_token": false,
    "change_pad_to_eos": false,
    "shuffle_bundles": true,
    "save_folder": "ruT5-large-JJ",
    "train": {
        "n_epochs": 6,
        "lr": 0.00003,
        "batch_size": 8,
        "weight_decay": 0.05,
        "scheduler": "cosine",
        "warmup_steps": 500,
        "fp16": true
    },
    "eval": {
        "batch_size": 8,
        "show": 5
    }
}